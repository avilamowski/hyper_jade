      <LOCATION>{{ error.location }}</LOCATION>
      <EXPLANATION>{{ error.explanation }}</EXPLANATION>
      <IMPACT>{{ error.impact }}</IMPACT>
      <FIX>{{ error.fix }}</FIX>
      <TEST_CASE>
        <INPUT>{{ error.test_input }}</INPUT>
        <EXPECTED>{{ error.expected_output }}</EXPECTED>
        <ACTUAL>{{ error.actual_output }}</ACTUAL>
      </TEST_CASE>
    </ERROR>
    {% endfor %}
  </LOGIC_ERRORS>
  
  <ALGORITHM_ISSUES>
    {% for issue in algorithm_issues %}
    <ISSUE category="{{ issue.category }}">
      <DESCRIPTION>{{ issue.description }}</DESCRIPTION>
      <LOCATION>{{ issue.location }}</LOCATION>
      <EXPLANATION>{{ issue.explanation }}</EXPLANATION>
      <SUGGESTION>{{ issue.suggestion }}</SUGGESTION>
    </ISSUE>
    {% endfor %}
  </ALGORITHM_ISSUES>
  
  <EDGE_CASES>
    {% for case in edge_cases %}
    <EDGE_CASE type="{{ case.type }}">
      <DESCRIPTION>{{ case.description }}</DESCRIPTION>
      <TEST_INPUT>{{ case.test_input }}</TEST_INPUT>
      <EXPECTED_BEHAVIOR>{{ case.expected_behavior }}</EXPECTED_BEHAVIOR>
      <CURRENT_BEHAVIOR>{{ case.current_behavior }}</CURRENT_BEHAVIOR>
      <SUGGESTION>{{ case.suggestion }}</SUGGESTION>
    </EDGE_CASE>
    {% endfor %}
  </EDGE_CASES>
  
  <PERFORMANCE_CONCERNS>
    {% for concern in performance_concerns %}
    <CONCERN type="{{ concern.type }}">
      <DESCRIPTION>{{ concern.description }}</DESCRIPTION>
      <LOCATION>{{ concern.location }}</LOCATION>
      <COMPLEXITY>{{ concern.complexity }}</COMPLEXITY>
      <OPTIMIZATION>{{ concern.optimization }}</OPTIMIZATION>
    </CONCERN>
    {% endfor %}
  </PERFORMANCE_CONCERNS>
  
  <SUMMARY>
    <TOTAL_LOGIC_ERRORS>{{ total_logic_errors }}</TOTAL_LOGIC_ERRORS>
    <TOTAL_ALGORITHM_ISSUES>{{ total_algorithm_issues }}</TOTAL_ALGORITHM_ISSUES>
    <MISSING_EDGE_CASES>{{ missing_edge_cases }}</MISSING_EDGE_CASES>
    <OVERALL_CORRECTNESS>{{ overall_correctness }}</OVERALL_CORRECTNESS>
    <COMPLEXITY_ASSESSMENT>{{ complexity_assessment }}</COMPLEXITY_ASSESSMENT>
  </SUMMARY>
  
  <LEARNING_RESOURCES>
    {% for resource in learning_resources %}
    <RESOURCE type="{{ resource.type }}">
      <TITLE>{{ resource.title }}</TITLE>
      <URL>{{ resource.url }}</URL>
      <DESCRIPTION>{{ resource.description }}</DESCRIPTION>
    </RESOURCE>
    {% endfor %}
  </LEARNING_RESOURCES>
</LOGIC_ANALYSIS>
